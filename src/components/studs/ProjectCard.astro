---
const {href, logoPath, title, header, color, wip} = Astro.props;
---

<style>
	.orange { @apply outline-orange-500 to-orange-800 hover:bg-orange-700; }
	.indigo { @apply outline-indigo-500 to-indigo-900 hover:bg-indigo-900; }
	.green { @apply outline-emerald-500 to-emerald-900 hover:bg-emerald-700; }
	.red { @apply outline-red-500 to-red-900 hover:bg-red-900; }
	.blue { @apply outline-sky-500 to-sky-900 hover:bg-sky-600; }
	.fuchsia { @apply outline-fuchsia-500 to-fuchsia-900 hover:bg-fuchsia-600; }
</style>

<a
	{href}
	class:list={[`space-y-3 sm:px-6 px-4 py-4 m-2 col backdrop-blur-xl font-italic text-xs outline outline-1 ${color} rounded-sm bg-gradient-to-br from-transparent shadow-lg sm:w-fit max-w-full items-start hover:outline-white transition-all duration-200`]}
>
	<div class="flex justify-items-start items-start space-x-4">
		<img src={logoPath} class="w-12 border rounded-md border-slate-400 shadow-md bg-slate-900 bg-opacity-20"  alt={title} />
		<div class="col items-start">
			{wip && <div class="flex space-x-2 items-center">
				<p class="text-2xl font-black">{title}</p>
				<p class="bg-red-600 text-sm px-2 rounded-full">WIP</p>
			</div>}
			{!wip && <p class="text-2xl font-black">{title}</p>}
			<p class="text-slate-200">{header}</p>
		</div>
	</div>

	<p class="italic text-lg"><slot/></p>
</a>
